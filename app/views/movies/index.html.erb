<h1 class="headings text-center mt-4 py-2">Movies</h1>

<div class="container">
  <% @movies.each do |movie| %>
    <div class="card text-center">
      <div class="card-body">
        <h5 class="card-title"><%= link_to movie.title, movie_path(movie) %></h5>
        <%= link_to "Show", movie_path(movie), class: "form_btn" %>
      </div>
    </div>
  <% end %>
</div>