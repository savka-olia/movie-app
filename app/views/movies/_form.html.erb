<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%# <%= render 'shared/errors', obj: @movie %>
      <%= form_with(model: @movie, class: "form_movie shadow p-3 mb-3 rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of movie" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label" %>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of movie" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "form_btn" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3 text-center">
      <%= link_to '[ Cancel and return to movies listing ]', movies_path, class: "text-info" %>
    </div>
  </div>
</div> 